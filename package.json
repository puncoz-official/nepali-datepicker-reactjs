{
  "name": "nepali-datepicker-reactjs",
  "version": "1.0.0",
  "description": "Nepali Datepicker (Bikram Sambat) as a ReactJS component",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/puncoz-official/nepali-datepicker-reactjs.git"
  },
  "keywords": [
    "nepali",
    "datepicker",
    "bikram",
    "sambat"
  ],
  "author": "Puncoz Nepal <info@puncoz.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/puncoz-official/nepali-datepicker-reactjs/issues"
  },
  "homepage": "https://github.com/puncoz-official/nepali-datepicker-reactjs#readme",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "files": [
    "lib/**/*"
  ]
}
