{
  "name": "@puncoz/lib",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "npm": ">=6.10"
  },
  "scripts": {
    "prepare": "husky install",
    "lib": "yarn workspace nepali-datepicker-reactjs",
    "demo": "yarn workspace @puncoz/demo",
    "clean": "yarn demo clean && yarn lib clean",
    "clean:modules": "yarn demo clean:modules && yarn lib clean:modules && del node_modules",
    "dev:lib": "yarn lib lib:dev",
    "dev:demo": "yarn demo dev",
    "build": "yarn lib dist"
  },
  "workspaces": {
    "packages": [
      "NepaliDatePicker",
      "demo"
    ]
  },
  "devDependencies": {
    "del-cli": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "NepaliDatePicker/src/**/*.{ts,tsx}": [
      "yarn lib lint:eslint"
    ]
  }
}
